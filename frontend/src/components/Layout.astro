  <script>
    // ãƒ†ãƒ¼ãƒç®¡ç† - ã‚°ãƒ­ãƒ¼ãƒãƒ«é–¢æ•°
    window.initTheme = function() {
      const savedTheme = localStorage.getItem('brw-theme') || 'cupcake';
      document.documentElement.setAttribute('data-theme', savedTheme);
    }
    
    window.changeTheme = function(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('brw-theme', theme);
    }
    
    window.logout = function() {
      localStorage.removeItem('access_token');
      localStorage.removeItem('id_token');
      localStorage.removeItem('refresh_token');
      window.location.href = '/';
    }
    
    // èªè¨¼çŠ¶æ…‹ãƒã‚§ãƒƒã‚¯ã¨ãƒŠãƒ“ã‚²ãƒ¼ã‚·ãƒ§ãƒ³åˆ¶å¾¡
    function checkAuthAndUpdateNav() {
      const accessToken = localStorage.getItem('access_token');
      const idToken = localStorage.getItem('id_token');
      const isAuthenticated = accessToken && idToken;
      
      // ãƒ‡ã‚¹ã‚¯ãƒˆãƒƒãƒ—ã¨ãƒ¢ãƒã‚¤ãƒ«ã®Signup/Loginãƒªãƒ³ã‚¯ã‚’åˆ¶å¾¡
      const signupLinks = [document.getElementById('desktop-signup'), document.getElementById('mobile-signup')];
      const loginLinks = [document.getElementById('desktop-login'), document.getElementById('mobile-login')];
      const authActions = document.getElementById('auth-actions');
      
      signupLinks.forEach(link => {
        if (link && link.closest('li')) {
          link.closest('li').style.display = isAuthenticated ? 'none' : '';
        }
      });
      
      loginLinks.forEach(link => {
        if (link && link.closest('li')) {
          link.closest('li').style.display = isAuthenticated ? 'none' : '';
        }
      });
      
      if (authActions) {
        authActions.classList.toggle('hidden', !isAuthenticated);
      }
    }
    
    // ã‚¢ãƒ—ãƒªåã‚’å–å¾—
    function loadAppName() {
      fetch('/api/')
        .then(response => response.json())
        .then(data => {
          document.getElementById('app-name-nav').textContent = data.appName;
          document.getElementById('footer-text').textContent = `Â© 2025 ${data.appName} - Image Provenance Service`;
        })
        .catch(() => {
          document.getElementById('app-name-nav').textContent = 'App';
          document.getElementById('footer-text').textContent = 'Â© 2025 App - Image Provenance Service';
        });
    }
    
    // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ã®åˆæœŸåŒ–
    document.addEventListener('DOMContentLoaded', () => {
      initTheme();
      checkAuthAndUpdateNav();
      loadAppName();
      
      // ãƒ†ãƒ¼ãƒé¸æŠã®ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼
      document.querySelectorAll('[data-theme]').forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const theme = e.target.getAttribute('data-theme');
          changeTheme(theme);
        });
      });
    });
  </script>
